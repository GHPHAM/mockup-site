---
import { ClientRouter } from "astro:transitions";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import '../styles/global.css';

const { title = "TradeAnchor AI", description = "Strategic Wealth Optimization for U.S. retail investors." } = Astro.props;
---

<!doctype html>
<html lang="en" class="bg-neutral-950 text-neutral-100">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>

    <ClientRouter />
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>

  <body class="min-h-screen">
    <div class="absolute inset-0 -z-10 bg-[radial-gradient(60%_60%_at_50%_0%,rgba(56,189,248,0.18),rgba(0,0,0,0))]"></div>
    <Navbar />
    <main class="mx-auto w-full max-w-6xl px-4 sm:px-6 lg:px-8">
      <slot />
    </main>
    <Footer />
  </body>
</html>
