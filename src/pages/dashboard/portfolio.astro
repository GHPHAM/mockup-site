---
import AppLayout from "../../layouts/AppLayout.astro";
import StatCard from "../../components/app/StatCard.astro";

const holdings = [
  { t: "MSFT", shares: "3.0", cost: "$368", mkt: "$402", pnl: "+9.2%" },
  { t: "AAPL", shares: "5.0", cost: "$182", mkt: "$196", pnl: "+7.7%" },
  { t: "GOOGL", shares: "4.0", cost: "$138", mkt: "$151", pnl: "+9.4%" },
];
---

<AppLayout title="TradeAnchor AI — Portfolio">
  <div class="grid gap-3 lg:grid-cols-3">
    <StatCard label="Portfolio value" value="$12,480" hint="Mock data" />
    <StatCard label="Cash" value="$1,020" hint="Available to deploy" />
    <StatCard label="Engine mode" value="Balanced" hint="Auto buffers on" />
  </div>

  <div class="mt-3 rounded-3xl border border-white/10 bg-white/5 p-5">
    <h2 class="text-lg font-semibold">Holdings</h2>
    <p class="mt-1 text-sm text-neutral-400">What you own (mock)</p>

    <div class="mt-4 overflow-x-auto">
      <table class="w-full text-left text-sm">
        <thead class="text-xs text-neutral-400">
          <tr>
            <th class="py-2 pr-3">Ticker</th>
            <th class="py-2 pr-3">Shares</th>
            <th class="py-2 pr-3">Avg cost</th>
            <th class="py-2 pr-3">Market</th>
            <th class="py-2">Unrealized</th>
          </tr>
        </thead>
        <tbody class="text-neutral-200">
          {holdings.map((h) => (
            <tr class="border-t border-white/10">
              <td class="py-3 pr-3 font-medium">{h.t}</td>
              <td class="py-3 pr-3 text-neutral-300">{h.shares}</td>
              <td class="py-3 pr-3 text-neutral-300">{h.cost}</td>
              <td class="py-3 pr-3 text-neutral-300">{h.mkt}</td>
              <td class="py-3 text-sky-300">{h.pnl}</td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>

    <div class="mt-4 rounded-2xl bg-neutral-950/40 p-4 ring-1 ring-white/10">
      <p class="text-sm text-neutral-300">
        Next POC step: add “Proposed anchors” per holding and a “Place draft order” button.
      </p>
    </div>
  </div>
</AppLayout>
