---
import BaseLayout from "../layouts/BaseLayout.astro";
import CTA from "../components/CTA.astro";

const lessons = [
  { t: "Limit Orders 101", d: "How limit orders work and why they beat emotional market orders." },
  { t: "Buying the Dip (Without Guessing)", d: "Support levels, volatility, and practical entry planning." },
  { t: "Compounding Over 5–10 Years", d: "Consistency, quality selection, and behavior > predictions." },
  { t: "Risk Basics", d: "Position sizing, diversification, and drawdown awareness." },
];
---

<BaseLayout title="Academy — TradeAnchor AI" description="Educational tutorials for retail investors: limit orders, compounding, and risk.">
  <section class="pt-14 pb-6">
    <h1 class="text-4xl font-semibold tracking-tight">Academy</h1>
    <p class="mt-3 text-neutral-300 max-w-2xl">
      Short, practical lessons that turn “I get the idea” into “I can actually do it.”
    </p>
  </section>

  <section class="py-8">
    <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-2">
      {lessons.map((l) => (
        <article class="rounded-3xl border border-white/10 bg-white/5 p-6 hover:bg-white/10 transition">
          <h2 class="text-lg font-medium">{l.t}</h2>
          <p class="mt-2 text-sm text-neutral-300">{l.d}</p>
          <a class="mt-4 inline-flex text-sm text-sky-300 hover:text-sky-200" href="/waitlist">
            Get notified →
          </a>
        </article>
      ))}
    </div>
  </section>

  <CTA />
</BaseLayout>
