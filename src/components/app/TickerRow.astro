---
const { t, rating, price, anchor, note, tag = "ACCUMULATE" } = Astro.props;
---

<div class="rounded-2xl bg-neutral-950/40 p-4 ring-1 ring-white/10 hover:ring-white/20 transition">
  <div class="flex items-center justify-between gap-4">
    <div class="min-w-0">
      <div class="flex items-center gap-2">
        <p class="font-semibold">{t}</p>
        <span class="rounded-full bg-white/10 px-2 py-0.5 text-[11px] text-neutral-300">{tag}</span>
      </div>
      <p class="mt-1 text-sm text-neutral-400 truncate">{note}</p>
    </div>

    <div class="text-right">
      <p class="text-sm text-neutral-300">Score: <span class="text-sky-300">{rating}</span></p>
