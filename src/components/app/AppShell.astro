---
import Sidebar from "./Sidebar.astro";
import Topbar from "./Topbar.astro";
---

<div class="min-h-[calc(100dvh-201px)]">
  <div class="mx-auto max-w-7xl px-3 sm:px-4 lg:px-6">
    <div class="grid grid-cols-12 gap-3 py-3">
      <aside class="col-span-12 lg:col-span-3 xl:col-span-2">
        <Sidebar />
      </aside>

      <section class="col-span-12 lg:col-span-9 xl:col-span-10">
        <Topbar />
        <div class="mt-3">
          <slot />
        </div>
      </section>
    </div>
  </div>
</div>
